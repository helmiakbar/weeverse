<!DOCTYPE html>
<html>
<head>
	<title>Weeverse</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<link rel="stylesheet" type="text/css" href="assets/styles/style.css"/>
	<%= csrf_meta_tags %>
</head>
<body>
	<div id="container-header" class="row">
		<div id="left-header" class="large-4 columns">
			<% if user_signed_in? %>
				<a href="#">
					<img src="assets/images/earth.png" width="40"/>
					<h4><%= current_user.name %></h4>
				</a>
			<% else %>
				<a href="#">
					<img src="assets/images/earth.png" width="40"/>
					<h4>WeeVerse</h4>
				</a>
			<% end %>
		</div>
		<div id="middle-header" class="large-4 columns">
			<input id="text-search" type="text" placeHolder="Search" name="search"/>
			<ul id="top-menu">
				<li><a href="#">Map</a></li>
				<li><a href="#">Calendar</a></li>
			</ul>
		</div>
		<% if user_signed_in? %>
			<div id="right-header" class="large-1 small-offset-3 columns">
				<a href="#" data-dropdown="drop1"><%= current_user. name %></a>
				<ul id="drop1" class="f-dropdown" data-dropdown-content>
				  <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
				</ul>
			</div>
		<% else %>
			<div id="right-header" class="large-1 small-offset-3 columns">
				<%= link_to "Login", new_user_session_path %>
			</div>
		<% end %>
	</div>
	<%= yield %>

</body>
</html>
